<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- bootstrap css -->
    <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">


    <!-- vendor scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <!-- <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.min.js"></script> -->

    <!-- application scripts -->
    <script src="scripts/app.js"></script>

    <title>AppName</title>
</head>

<body>
  <div class="container text-center">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1>Sign Up</h1>
        <hr>
        <form id="signup-form">
          <div class="form-group">
            <input type="text" name="email" class="form-control" placeholder="Email" autofocus required>
          </div>
          <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Password" required>
          </div>
          <div class="form-group">
            <input type="text" name="nativeLang" class="form-control" placeholder="What's your native language?" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="learnLang" class="form-control" placeholder="What languages are you learning?" autofocus>
          </div>
          <!-- <div class="form-group">
            <input type="text" name="currentCity" class="form-control" placeholder="What city do you live?" autofocus>
          </div> -->
          <div class="form-group">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">CurrentCity
            <span class="caret"></span></button>
            <ul id= "cityDropdown" class="dropdown-menu">
              <li>San Francisco</li>
              <li>New York</li>
              <li>Tokyo</li>
              <li>Chengdu</li>
            </ul>
          </div>

          <div class="form-group">
            <input type="text" id="favoriteAnimal" name="favoriteAnimal" class="form-control" placeholder="What's your favorite animal?" autofocus>
          </div>
          <div class="form-group">
            <input type="hidden" id="profileUrl" name="profileUrl" class="form-control">
          </div>
          <div class="form-group">
            <input type="hidden" id="name" name="name" class="form-control">
          </div>
          <div class="form-group">
            <input type="submit" value="Sign Up" class="btn btn-primary">
          </div>
          <a href="/login">Login</a>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
