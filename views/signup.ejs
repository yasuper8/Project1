<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- bootstrap css -->
    <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">


    <!-- vendor scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <!-- <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.min.js"></script> -->

    <!-- application scripts -->
    <script src="scripts/app.js"></script>

    <!-- application css -->
    <link type="text/css" rel="stylesheet" href="styles/app.css">

    <title>Lingo Jungle</title>
</head>

<body>
  <div class="container text-center">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <img src="images/logo.png" alt="logo" style="width:400px;height:250px;">
        <hr>
        <form id="signup-form">
          <div class="form-group">
            <input type="text" name="email" class="form-control" placeholder="Email" autofocus required>
          </div>
          <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Password" required>
          </div>

              <div class="more" data-toggle="collapse" data-target="#moreInfo">
                  <button class="btn btn-danger">Next</button>
                  <br>
              </div>

              <div class="collapse" id="moreInfo">
                <br>
                  <div class="form-group">
                    <input type="text" name="nativeLang" class="form-control" placeholder="What's your native language?" autofocus>
                  </div>
                  <div class="form-group">
                    <input type="text" name="learnLang" class="form-control" placeholder="What languages are you learning?" autofocus>
                  </div>
                  <div class="animalSelection" data-toggle="collapse" data-target="#animal">
                      <button class="btn btn-danger">Next</button>
                  </div>
                </div>

                <div class="collapse" id="animal">
                  <br>
                <div class="form-group">
                  <input type="text" id="favoriteAnimal" name="favoriteAnimal" class="form-control" placeholder="What's your favorite animal?" autofocus>
                </div>
          <div class="form-group">
            <input type="hidden" id="profileUrl" name="profileUrl" class="form-control">
          </div>
          <div class="form-group">
            <input type="hidden" id="name" name="name" class="form-control">
          </div>
          <div class="form-group">
            <input type="submit" value="Sign Up" class="btn btn-danger">
          </div>
        </div>
        <br>
          <a href="/login">Login</a>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
