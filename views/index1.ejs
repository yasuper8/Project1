<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- bootstrap css -->
    <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">


    <!-- vendor scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.min.js"></script>

    <!-- application scripts -->
    <script src="scripts/app.js"></script>

    <!-- application css -->
    <link type="text/css" rel="stylesheet" href="styles/app.css">

    <title>AppName</title>
</head>

<body>

  <!-- begin welcome message -->

    <div class="bg-light lter b-b wrapper-md">
        <div class="row">
            <div class="col-sm-6 col-xs-12">
                <h1 class="m-n font-thin h3 text-black">AppName</h1>
                <small class="welcome text-muted" data-id="<%=user._id%>">Welcome! You're logged in as <%= user.email %></small>
            </div>
            <div class="col-sm-6 text-right hidden-xs">
                <a id="logout" href="/logout" class="btn btn-default">Log Out</a>
            </div>
        </div>
    </div>

    <!-- end welcome message -->

    <!-- beginning current user profile -->
    <div class="col w-md bg-white-only b-l bg-auto no-border-xs currentUser" data-id="<%=user._id%>">
        <div class="wrapper-md">
            <div class="m-b-sm text-md">My Profile</div>
            <ul class="list-group no-bg no-borders pull-in">
                <li class="list-group-item">
                    <a herf class="pull-left thumb-sm avatar m-r">
                        <img src="<%= user.profileUrl %>" alt="currentUser image">
                    </a>
                    <div class="clear">
                        <div>Anonymous <%= user.name %></div>
                        <small class='native-lang text-muted'>Speaks <%= user.nativeLang %></small>
                        <small class='learning-lang text-muted'>Learning <%= user.learnLang %> </small>
                    </div>
                </li>
              </ul>




         <div class="pull-right">

        <a href="javascript:void(0)" data-toggle="collapse" data-target="#update-<%= user._id %>">
        <span class="glyphicon glyphicon-pencil"></span>
        </a>
          </div>
            <div class = "collapse" id="update-<%= user._id %>">
                 <br>
                 <form class="form-inline update-todo">
                   <div class="form-group">
                     <input type="text" name="task" class="form-control" placeholder="Which languages do you want to learn?" value="{{learnLang}}">
                   </div>
                   <div class="form-group">
                     <input type="submit" class="btn btn-block btn-default" value="Update">
                   </div>
                 </form>
               </div>
    </div>
      </div>


    <!--end of current user profile-->

    <!-- main -->
    <div class="col">
    <div class="bg-light lter b-b wrapper-md">
        <div class="m-b-sm text-md">Potential Language Exchange Partners Found</div>
        <div class="table-responsive">
            <div id='foundUsers'>
                <!-- one user -->
                <div class="row user">
                    <div class="panel panel-default">
                        <!-- begin one user row -->
                        <script id="users-template" type="text/x-handlebars-template">
                            {{#each users}}

                            <div class="col">
                                <div class="list-group list-group-lg list-group-sp">
                                    <a herf class="list-group-item clearfix">
                                        <span class="pull-left thumb-sm avatar m-r">
                <img src="{{profileUrl}}" alt="user image">
              </span>
                                        <span class="clear">
                <span class='name'>Anonymous {{name}}</span>
                                        <small class="text-muted clear text-ellipsis">Speakes {{nativeLang}}</small>
                                        <small class="text-muted clear text-ellipsis">Learning {{learnLang}}</small>
                                        <!-- <span class="text-muted clear text-ellipsis" a href="mailto:{{email}}">email Me!</a></span> -->
                                        <span class="pull-right label bg-info inline m-t-sm" a href="mailto:{{email}}">Email Me!</a></span>
                                        </span>
                                    </a>
                                    {{/each}}
                        </script>

                        <!-- end of user row -->
                        </div>
                        </div>
                    </div>
                    <!-- end one user -->
                </div>
            </div>
        </div>
    </div>
</div>


</body>

</html>
