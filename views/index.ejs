<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- bootstrap css -->
    <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">


    <!-- vendor scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.min.js"></script>

    <!-- custum css -->
    <link rel="stylesheet" href="styles/styles.css">
    <!-- application scripts -->
    <script src="scripts/app.js"></script>

    <title>AppName</title>
</head>

<body>

    <!-- Navigation bar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="signup">Brand</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="#">Link</a></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li class=""><a data-toggle="modal" data-target=".update-modal" href="">Update your info!</a></li>
              <li class=""><a id="logout" href="/logout">Log Out</a></li>
          </ul>
        </div>
      </div>
    </nav>


    <!-- Large modal user update-->
    <div id="updateModal" class="modal fade update-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content  text-center">

          <div class="container">
            <div class="row">
              <div class="col-md-6">
                <h1>Update info</h1>
                <hr>
                <form id="update-form" class="update update-currentUser" method="PUT" action="/api/users" data-id="<%=user._id%>">
                  <div class="form-group">
                    <input type="text" name="learnLang" class="form-control reset" placeholder="Would you like to practice a different language?" required>
                  </div>
                  <!-- <div class="form-group">
                    <input type="text" id="favoriteAnimal" name="favoriteAnimal" class="form-control reset" placeholder="Would you like to change your animal?" autofocus>
                  </div>
                  <div class="form-group">
                    <input type="hidden" id="profileUrlUpdate" name="profileUrl" class="form-control reset">
                  </div> -->
                  <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary">
                  </div>
                  <!-- <a href="/login">Login</a> -->
                  <!-- <div id="signUp-error" class="alert alert-warning collapse" role="alert">
                    <a href="#" data-dismiss="alert" class="colse">&times;</a>
                    <strong>uh oh!</strong> Something went wrong...Please check the information your form again.
                  </div> -->
                </form>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div><!-- user pudate modal end -->

    <div class="wrapper-md">
        <div class="panel-heading text-center">
          <br>
          <br>

            <h1><strong>Welcome!</strong></h1>
            <h2 class="welcome" data-id="<%=user._id%>">You're logged in as <strong><%= user.favoriteAnimal %></strong></h2>
            <br>

        </div>
        <!-- beginning current user profile -->
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 currentUserProfile" data-url="<%= user.profileUrl %>" data-id="<%=user._id%>">
                <div class="well well-sm">
                    <div class="row">
                        <div class="col-sm-6 col-md-6">
                            <div class="m-b-sm text-md"><strong>My Profile</strong></div>
                            <img src="<%= user.profileUrl %>" alt="" style="height:215px" class="img-rounded img-responsive" />
                        </div>
                        <div class="col-sm-6 col-md-6">
                            <h4>
                                Anonymous <%= user.favoriteAnimal %></h4>
                            <small><cite title="San Francisco, USA">San Francisco, USA <i class="glyphicon glyphicon-map-marker">
                            </i></cite></small>
                            <p class="lead">
                                <!-- <a href="#">{{currentCity}}, USA <i class="glyphicon glyphicon-map-marker">
                                </i></a>
                                <br /> -->
                                <!-- <a href="mailto:<%= user.email %>"><i class="glyphicon glyphicon-envelope"></i> {{email}}</a> -->
                                <br />
                                <!-- <i class="glyphicon glyphicon-globe"></i><a href="http://www.jquery2dotnet.com">www.jquery2dotnet.com</a>
                                <br /> -->
                                Native Lanuage : <strong><%= user.nativeLang %></strong>
                                <br />
                                language to Practice : <strong><%= user.learnLang %></strong>
                                <br />
                                Friends : <strong><%= user.friends %></strong></p>
                              <button class="btn btn-primary" data-toggle="modal" data-target=".update-modal" href="">Update my info</button>
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
       <!--end of current user profile -->
        <br>
        <div class="text-center">
          <h1><strong>Potential Language Exchange Partners Found!</strong></h1>
        </div>
        <br>

        <br>

        <div class="table-responsive">
          <!-- found user profiles -->
            <div id='foundUsers'>
              <div class="container">
                  <div class="row">
                      <script id="users-template" type="text/x-handlebars-template">
                              {{#each users}}
                              <div class="col-xs-12 col-sm-6 col-md-6">
                                  <div class="well well-sm">
                                      <div class="row">
                                          <div class="col-sm-6 col-md-6">
                                              <img src="{{profileUrl}}" alt="" style="height:215px" class="img-rounded img-responsive" />
                                          </div>
                                          <div class="col-sm-6 col-md-6">
                                              <h4>
                                                  Anonymous {{favoriteAnimal}}</h4>
                                              <small><cite title="San Francisco, USA">San Francisco, USA <i class="glyphicon glyphicon-map-marker">
                                              </i></cite></small>
                                              <p class="lead">
                                                  <!-- <a href="#">{{currentCity}}, USA <i class="glyphicon glyphicon-map-marker">
                                                  </i></a>
                                                  <br /> -->
                                                  <a href="mailto:{{email}}"><i class="glyphicon glyphicon-envelope"></i> {{email}}</a>
                                                  <br />
                                                  <!-- <i class="glyphicon glyphicon-globe"></i><a href="http://www.jquery2dotnet.com">www.jquery2dotnet.com</a>
                                                  <br /> -->
                                                  Native Lanuage : <strong>{{nativeLang}}</strong>
                                                  <br />
                                                  language to Practice : <strong>{{learnLang}}</strong>
                                                  <br />
                                                  Friends : <strong>{{friends}}</strong></p>

                                          </div>
                                      </div>
                                  </div>
                              </div>
                              {{/each}}
                      </script>
                  </div>
              </div>
                  <!-- end of user row -->
            </div>
        </div>
    </div>
</body>

</html>
