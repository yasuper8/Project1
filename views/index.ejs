<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- bootstrap css -->
    <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">


    <!-- vendor scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.min.js"></script>

    <!-- application scripts -->
    <script src="scripts/app.js"></script>

    <title>AppName</title>
</head>

<body>

    <div class="container text-center">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1>Profile</h1>
                <hr>
                <h2 class="welcome" data-id="<%=user._id%>">Welcome! You're logged in as <%= user.nativeLang %></h2>
                <a id="logout" href="/logout" class="btn btn-default">Log Out</a>
                <a id="findMatch" class="btn btn-default">Find Me Native Speakers</a>
            </div>
        </div>
    </div>

    <div class="wrapper-md">
        <div class="panel-heading">
            Potential Language Exchange Partners Found
        </div>
        <div class="table-responsive">
            <div id='foundUsers'>

                <!-- one user -->
                <div class="row user">
                    <div class="panel panel-default">
                        <!-- begin one user row -->

                        <div class="col-md-9 col-xs-12">
                            <script id="users-template" type="text/x-handlebars-template">
                                {{#each users}}
                                <div class="list-group">
                                    <div class='row'>
                                        <div class="col-md-3 col-xs-12 thumbnail album-art">
                                            <img src={{profileUrl}} alt="user image">
                                        </div>

                                        <div class="col-md-9 col-xs-12">
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <h4 class='inline-header'>Name:</h4>
                                                    <span class='name'>Anonymous {{name}}</span>
                                                </li>

                                                <li class="list-group-item">
                                                    <h4 class='inline-header'>email:</h4>
                                                    <span class='email'>{{email}}</span>
                                                </li>

                                                <li class="list-group-item">
                                                    <h4 class='inline-header'>Native language:</h4>
                                                    <span class='native-lang'>{{nativeLang}}</span>
                                                </li>

                                                <li class="list-group-item">
                                                    <h4 class='inline-header'>Learning Languages:</h4>
                                                    <span class='learning-lang'>{{learnLang}} </span>
                                                </li>

                                                <li class="list-group-item">
                                                    <h4 class="inline-header">Current City:</h4>
                                                    <span class='currnet-city'>{{currentCity}}</span>
                                                </li>

                                                <li class="list-group-item">
                                                    <h4 class="inline-header">Friends:</h4>
                                                    <span class='friends'>{{friends}}</span>
                                                </li>

                                            </ul>
                                            <div class="col-md-3 col-xs-12">
                                                <a href="mailto:{{email}}">Email Me!</a></p>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                {{/each}}
                            </script>
                        </div>
                        <!-- end of user row -->
                    </div>
                </div>
            </div>

            <!-- end one user -->
        </div>
    </div>
</body>

</html>
